<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272626"
    android:orientation="vertical"
    tools:context=".Ten">


    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/extra"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp">

                   <LinearLayout
                       android:layout_width="@dimen/_25sdp"
                       android:layout_height="@dimen/_25sdp"
                       android:background="@drawable/round2">

                   </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="144 Broughton Ave,Bloomfiled"
                            android:textColor="#6C6A6A"/>

                        <LinearLayout
                            android:layout_margin="@dimen/_5sdp"
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            app:cardBackgroundColor="#333336"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:padding="@dimen/_3sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#6E6C6C"
                                android:text="Entrance"/>
                        </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp">

                   <LinearLayout
                       android:layout_width="@dimen/_25sdp"
                       android:layout_height="@dimen/_25sdp"
                       android:background="@drawable/round2"/>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="800 E 180th st, the Bronx"
                            android:textColor="#ffffff"/>
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_margin="@dimen/_10sdp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <androidx.cardview.widget.CardView
                                android:layout_margin="@dimen/_5sdp"
                                android:backgroundTint="#33363A"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_50sdp"
                                app:cardCornerRadius="@dimen/_8sdp">


                                <LinearLayout
                                    android:layout_margin="@dimen/_1sdp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_margin="@dimen/_5sdp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/jeep" />

                                    <TextView
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Comfort\n18 $"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_margin="@dimen/_5sdp"
                                android:backgroundTint="#33363A"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_50sdp"
                                app:cardCornerRadius="@dimen/_8sdp">


                                <LinearLayout
                                    android:layout_margin="@dimen/_1sdp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_margin="@dimen/_5sdp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/jeep" />

                                    <TextView
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="4 X 4\n34 $"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_margin="@dimen/_5sdp"
                                android:backgroundTint="#33363A"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_50sdp"
                                app:cardCornerRadius="@dimen/_8sdp">


                                <LinearLayout
                                    android:layout_margin="@dimen/_1sdp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_margin="@dimen/_5sdp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/jeep" />

                                    <TextView
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Comfort\n15 $"
                                        android:textColor="#FFC000"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_margin="@dimen/_5sdp"
                                android:backgroundTint="#33363A"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_50sdp"
                                app:cardCornerRadius="@dimen/_8sdp">


                                <LinearLayout
                                    android:layout_margin="@dimen/_1sdp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_margin="@dimen/_5sdp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/jeep" />

                                    <TextView
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Pickup\n25 $"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>



                        <androidx.cardview.widget.CardView

                            android:id="@+id/car"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:backgroundTint="#FFC000"
                            app:cardCornerRadius="10dp">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="GET A CAR"
                                android:textColor="@color/black"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>